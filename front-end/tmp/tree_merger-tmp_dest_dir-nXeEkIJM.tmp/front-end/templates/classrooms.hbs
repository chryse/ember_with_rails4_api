<div class="row">
  <div class="col s3">
    <h1 class="flow-text">Classrooms</h1>
    <div>
      Name: {{input value=name}}
      Description: {{input value=description}}
      <button {{action "addClassroom"}}>Add</button>
      <button {{action "showClassroom"}}>Show Classrooms</button>
    </div>
    {{#each classrooms as |classroom|}}
        <p>{{classroom.name}} {{classroom.description}}</p>
    {{/each}}
  </div>

  <div class="col s9">
    {{outlet}}
  </div>
</div>
